datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

// ------------------------- Movie -------------------------
model Movie {
  id          Int      @id @default(autoincrement())
  title       String
  slug        String   @unique
  genre       String
  releaseDate DateTime
  description String?
  banner      String // URL or path to banner image
  trailer     String // URL or path to trailer video
  movie       String // URL or path to movie file
  categoryId  Int
  category    Category @relation(fields: [categoryId], references: [id])
  createdAt   DateTime @default(now())
}

// ------------------------- User -------------------------
model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  phone     String?
  role      String
  createdAt DateTime @default(now())

  // üîÅ Relations (ADD THESE)
  passwordResets PasswordReset[]
  subscriptions  Subscription[]
  payments       Payment[]
}

//---------------password-----------------------------
model PasswordReset {
  id        Int      @id @default(autoincrement())
  userId    Int
  otp       String
  expiresAt DateTime
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

// ------------------------- Category -------------------------
model Category {
  id        Int      @id @default(autoincrement())
  name      String   @unique
  slug      String   @unique
  movies    Movie[]
  createdAt DateTime @default(now())
}

// ------------------------- Subscription -------------------------
enum SubscriptionStatus {
  TRIAL
  ACTIVE
  PAST_DUE
  CANCELLED
  EXPIRED
}

model Subscription {
  id     Int  @id @default(autoincrement())
  userId Int
  user   User @relation(fields: [userId], references: [id], onDelete: Cascade)

  plan   String
  status SubscriptionStatus @default(TRIAL)

  price    Float
  currency String @default("AUD")

  startsAt DateTime  @default(now())
  endsAt   DateTime?

  stripeSubscriptionId String? @unique

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  payments Payment[] @relation("SubscriptionPayments")

  @@index([userId, status])
}

// ------------------------- Payment -------------------------
enum PaymentStatus {
  SUCCESS
  PENDING
  FAILED
}

model Payment {
  id              Int           @id @default(autoincrement())
  userId          Int
  user            User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  subscriptionId  Int?
  subscription    Subscription? @relation(fields: [subscriptionId], references: [id], name: "SubscriptionPayments", onDelete: Cascade)
  amount          Float
  currency        String
  status          PaymentStatus
  stripePaymentId String?
  notes           Json?
  createdAt       DateTime      @default(now())
}
